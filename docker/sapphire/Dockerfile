FROM openjdk:latest
ENV INSTALLDIR="$INSTALLDIR" TRUSTSTORE_LOCATION="$TRUSTSTORE_LOCATION" CERTIFICATE_PROVIDER_AUTHORIZATION_KEY="$CERTIFICATE_PROVIDER_AUTHORIZATION_KEY" CERTIFICATE_PROVIDER_URL="$CERTIFICATE_PROVIDER_URL" STORAGE_ADDRESS="$STORAGE_ADDRESS" STORAGE_AUTHORIZATION_KEY="$STORAGE_AUTHORIZATION_KEY"
COPY . /opt/app/sapphire/
WORKDIR /opt/app/sapphire
CMD ["./gradlew", "bootRun"]